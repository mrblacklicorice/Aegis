<!--    app:layout_constraintEnd_toStartOf="@id/messageButton"-->
<!--    android:layout_marginTop="24dp"/>-->

    <!-- Message Button with Message Icon -->

    <ImageButton
        android:id="@+id/callButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:src="@drawable/call_icon"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="502dp" />

    <ImageButton
        android:id="@+id/locationButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#"
        android:src="@drawable/location_icon"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="502dp" />

    <ImageButton
        android:id="@+id/messageButton"
        android:layout_width="88dp"
        android:layout_height="93dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/texticon"
        android:contentDescription="Message Button"
        android:src="@drawable/texticon"
        android:tint="#"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tapButton" />

