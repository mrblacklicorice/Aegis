<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#D8BFD8">

    <!-- General Section -->
    <TextView
        android:id="@+id/generalSectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:textSize="20sp"
        android:textColor="#4B0082"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/companionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Companion Name"
        android:hintTextColor="#A9A9A9"
        android:backgroundTint="#4B0082"
        android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/generalSectionLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <Switch
        android:id="@+id/highRiskAreaAlertToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Risk Area Alert"
        android:textColor="#4B0082"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/companionName"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/highRiskAreaStartTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Start Time"
        android:hintTextColor="#A9A9A9"
        android:backgroundTint="#4B0082"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/highRiskAreaAlertToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/highRiskAreaEndTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="End Time"
        android:hintTextColor="#A9A9A9"
        android:backgroundTint="#4B0082"
        app:layout_constraintTop_toBottomOf="@id/highRiskAreaStartTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Companion Call Section -->
    <TextView
        android:id="@+id/companionCallSectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Companion Call"
        android:textSize="20sp"
        android:textColor="#4B0082"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/highRiskAreaEndTime"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/contact911Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact 911"
        android:textColor="#4B0082"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/companionCallSectionLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/contactEmergencyToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Emergency Contacts"
        android:textColor="#4B0082"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/contact911Toggle"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/customMessageCompanionCall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter custom message"
        android:hintTextColor="#A9A9A9"
        android:backgroundTint="#4B0082"
        app:layout_constraintTop_toBottomOf="@id/contactEmergencyToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Switch
        android:id="@+id/audioDetectionToggleCompanionCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Detection"
        android:textColor="#4B0082"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/customMessageCompanionCall"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Tap Button Section -->
    <TextView
        android:id="@+id/tapButtonSectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Button"
        android:textSize="20sp"
        android:textColor="#4B0082"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/audioDetectionToggleCompanionCall"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/contactAllToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact All"
        android:textColor="#4B0082"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/tapButtonSectionLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/contactEmergencyTapButtonToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Emergency Contacts"
        android:textColor="#4B0082"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/contactAllToggle"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/customMessageTapButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter custom message"
        android:hintTextColor="#A9A9A9"
        android:backgroundTint="#4B0082"
        app:layout_constraintTop_toBottomOf="@id/contactEmergencyTapButtonToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Switch
        android:id="@+id/audioDetectionToggleTapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Detection"
        android:textColor="#4B0082"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/customMessageTapButton"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
